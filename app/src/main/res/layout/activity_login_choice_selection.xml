<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000"
    tools:context="com.example.kashif.coachauthapp2.LoginChoiceSelectionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login As ..."
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#f9fcec87"
            android:textColor="#3f0469"/>

        <LinearLayout
            android:id="@+id/player_login_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="80dp"
                android:text="@string/player"
                android:textAllCaps="false"
                android:textSize="28sp"
                android:background="#f9acf1e3"
                android:onClick="playerLoginScreen"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="#f9acf1e3"
                android:src="@drawable/login_choice_player_icon"
                android:onClick="playerLoginScreen"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/parent_login_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="80dp"
                android:text="@string/parent"
                android:textSize="28sp"
                android:textAllCaps="false"
                android:background="#f9acf1e3"
                android:onClick="parentLoginScreen"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="#f9acf1e3"
                android:src="@drawable/login_choice_parent_icon"
                android:onClick="parentLoginScreen"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coach_login_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="80dp"
                android:text="@string/coach"
                android:textSize="28sp"
                android:textAllCaps="false"
                android:background="#f9acf1e3"
                android:onClick="showCoachLoginAlertDialog"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="#f9acf1e3"
                android:src="@drawable/login_choice_coach_icon"
                android:onClick="showCoachLoginAlertDialog"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
