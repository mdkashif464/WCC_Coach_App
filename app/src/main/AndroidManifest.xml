<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kashif.coachauthapp2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher_icon_custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".SplashScreenActivity"
            android:noHistory="true"
            android:screenOrientation="nosensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        ...
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginChoiceSelectionActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".PlayerProfileActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".AddNewPostActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".CoachProfileActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".CoachProfileEditActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".PlayerProfileEditActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".AllCoachListActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".AllPlayersListActivity"
            android:screenOrientation="nosensor">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ShowUpAndDownVoteGiversListActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".SelectTeamActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ShowTeamActivity"
            android:screenOrientation="nosensor"></activity>
    </application>

</manifest>